{
 "compilerOptions": {
     "outDir": "../build",
     "baseUrl": "./src",
     "rootDirs": [
         "./"
     ],
     "paths": {
         "*": [
             "*"
         ]
     },
     "target":           "es6",  // es-tspm package currently supports ^es2018
     "lib":              ["esnext"],
     "module":           "commonjs",
     "moduleResolution": "node",
     "sourceMap":      false, // es-tspm distorts source mappings, so there is no use
     "declaration":    false,
     "declarationMap": false,
     "esModuleInterop": true,
     "allowSyntheticDefaultImports": true,
     "experimentalDecorators": true,
     "emitDecoratorMetadata":  true, // Typegoose, TypeGraphQL requirement
     /* Checking severity level */
     "strict":                           true,
     "noUnusedLocals":                   true,
     "noUnusedParameters":               true,
     "noImplicitAny":                    true,
     "noImplicitThis":                   true,
     "noImplicitReturns":                true,
     "noFallthroughCasesInSwitch":       true,
     "noStrictGenericChecks":            false,
     "strictBindCallApply":              true,
     "strictFunctionTypes":              true,
     "strictNullChecks":                 true,
     "strictPropertyInitialization":     false,
     "allowUnreachableCode":             false,
     "forceConsistentCasingInFileNames": true,
     "alwaysStrict": true,
     "pretty":       true
 },
 "files": [
     "./src/app.ts"
 ],
 "include": [
     "**/*"
 ],
 "exclude": [
     "../node_modules/**/*", "build"
 ]
}
